<Window x:Class="ENOMVG_HFT_2022231.WpfClient.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ENOMVG_HFT_2022231.WpfClient"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Window.DataContext>
        <local:MainWindowVM/>
    </Window.DataContext>

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition Height="3*"/>
        </Grid.RowDefinitions>
        
        <Button Content="Student Editor" Grid.Column="0" Margin="10" Command="{Binding stewCommand}"/>
        <Button Content="Teacher Editor" Grid.Column="1" Margin="10" Command="{Binding tchwCommand}"/>
        <Button Content="School Editor" Grid.Column="2" Margin="10" Command="{Binding schwCommand}"/>
    </Grid>
</Window>
